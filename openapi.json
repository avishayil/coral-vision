{
  "openapi": "3.0.3",
  "info": {
    "title": "Coral Vision Face Recognition API",
    "description": "RESTful API for face detection, recognition, and enrollment using TensorFlow Lite models with optional Edge TPU acceleration.",
    "version": "0.1.0",
    "contact": {
      "name": "API Support"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "health",
      "description": "Health check endpoints"
    },
    {
      "name": "persons",
      "description": "Person management endpoints"
    },
    {
      "name": "recognition",
      "description": "Face recognition endpoints"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["health"],
        "summary": "Health check",
        "description": "Check if the API is running and get configuration info",
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    },
                    "use_edgetpu": {
                      "type": "boolean",
                      "example": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/persons": {
      "get": {
        "tags": ["persons"],
        "summary": "List all persons",
        "description": "Get a list of all enrolled persons",
        "operationId": "listPersons",
        "responses": {
          "200": {
            "description": "List of enrolled persons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "persons": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/PersonSummary"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "post": {
        "tags": ["persons"],
        "summary": "Register new person",
        "description": "Register a new person (metadata only, training images uploaded separately)",
        "operationId": "createPerson",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePersonRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Person registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePersonResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/persons/{person_id}": {
      "get": {
        "tags": ["persons"],
        "summary": "Get person details",
        "description": "Get details about a specific person including training statistics",
        "operationId": "getPerson",
        "parameters": [
          {
            "$ref": "#/components/parameters/PersonId"
          }
        ],
        "responses": {
          "200": {
            "description": "Person details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PersonDetails"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete": {
        "tags": ["persons"],
        "summary": "Delete person",
        "description": "Delete a person and all their training data",
        "operationId": "deletePerson",
        "parameters": [
          {
            "$ref": "#/components/parameters/PersonId"
          }
        ],
        "responses": {
          "200": {
            "description": "Person deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Person 0001_john_doe deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/persons/{person_id}/train": {
      "post": {
        "tags": ["persons"],
        "summary": "Upload training images",
        "description": "Upload training images for a person and generate face embeddings",
        "operationId": "trainPerson",
        "parameters": [
          {
            "$ref": "#/components/parameters/PersonId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/TrainPersonRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Training completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrainPersonResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "413": {
            "$ref": "#/components/responses/PayloadTooLarge"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/api/recognize": {
      "post": {
        "tags": ["recognition"],
        "summary": "Recognize faces",
        "description": "Recognize faces in uploaded images",
        "operationId": "recognizeFaces",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/RecognizeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recognition completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RecognizeResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "413": {
            "$ref": "#/components/responses/PayloadTooLarge"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "PersonId": {
        "name": "person_id",
        "in": "path",
        "required": true,
        "description": "Unique identifier for the person (e.g., 0001_john_doe)",
        "schema": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$",
          "example": "0001_john_doe"
        }
      }
    },
    "schemas": {
      "PersonSummary": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          }
        },
        "required": ["person_id", "name"]
      },
      "PersonDetails": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "embedding_count": {
            "type": "integer",
            "description": "Number of face embeddings stored",
            "example": 25
          },
          "face_count": {
            "type": "integer",
            "description": "Number of face images stored",
            "example": 25
          }
        },
        "required": ["person_id", "name", "embedding_count", "face_count"]
      },
      "CreatePersonRequest": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "description": "Unique identifier (alphanumeric with _ or -)",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "description": "Display name for the person",
            "example": "John Doe"
          }
        },
        "required": ["person_id", "name"]
      },
      "CreatePersonResponse": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "message": {
            "type": "string",
            "example": "Person registered successfully. Upload training images next."
          }
        }
      },
      "TrainPersonRequest": {
        "type": "object",
        "properties": {
          "images": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "binary"
            },
            "description": "Training image files (JPEG, PNG, BMP, WebP)"
          },
          "min_score": {
            "type": "number",
            "format": "float",
            "default": 0.95,
            "description": "Minimum face detection confidence (0-1)"
          },
          "max_faces": {
            "type": "integer",
            "default": 1,
            "description": "Maximum faces to extract per image"
          }
        },
        "required": ["images"]
      },
      "TrainPersonResponse": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "use_edgetpu": {
            "type": "boolean",
            "example": false
          },
          "input": {
            "type": "string",
            "description": "Temporary input directory path"
          },
          "processed_images": {
            "type": "integer",
            "example": 10
          },
          "saved_faces": {
            "type": "integer",
            "example": 10
          },
          "saved_embeddings": {
            "type": "integer",
            "example": 10
          },
          "skipped_no_face": {
            "type": "integer",
            "example": 0
          },
          "skipped_low_score": {
            "type": "integer",
            "example": 0
          },
          "output_dir": {
            "type": "string",
            "example": "data/scanned_people/0001_john_doe"
          }
        }
      },
      "RecognizeRequest": {
        "type": "object",
        "properties": {
          "images": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "binary"
            },
            "description": "Image files to recognize faces in"
          },
          "threshold": {
            "type": "number",
            "format": "float",
            "default": 0.6,
            "description": "Recognition threshold - lower is stricter"
          },
          "top_k": {
            "type": "integer",
            "default": 3,
            "description": "Return top K matches per face"
          },
          "per_person_k": {
            "type": "integer",
            "default": 20,
            "description": "Compare against K best embeddings per person"
          }
        },
        "required": ["images"]
      },
      "RecognizeResponse": {
        "type": "object",
        "properties": {
          "use_edgetpu": {
            "type": "boolean",
            "example": false
          },
          "input": {
            "type": "string",
            "description": "Temporary input directory path"
          },
          "threshold": {
            "type": "number",
            "format": "float",
            "example": 0.6
          },
          "top_k": {
            "type": "integer",
            "example": 3
          },
          "per_person_k": {
            "type": "integer",
            "example": 20
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ImageRecognitionResult"
            }
          }
        }
      },
      "ImageRecognitionResult": {
        "type": "object",
        "properties": {
          "image_path": {
            "type": "string",
            "example": "/tmp/tmpxyz/photo.jpg"
          },
          "faces": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FaceRecognitionResult"
            }
          }
        }
      },
      "FaceRecognitionResult": {
        "type": "object",
        "properties": {
          "bbox": {
            "$ref": "#/components/schemas/BoundingBox"
          },
          "score": {
            "type": "number",
            "format": "float",
            "description": "Detection confidence score",
            "example": 0.98
          },
          "matches": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PersonMatch"
            }
          },
          "predicted": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/PersonMatch"
              },
              {
                "type": "null"
              }
            ]
          },
          "accepted": {
            "type": "boolean",
            "description": "Whether the prediction was accepted (distance < threshold)",
            "example": true
          },
          "threshold": {
            "type": "number",
            "format": "float",
            "example": 0.6
          }
        }
      },
      "BoundingBox": {
        "type": "object",
        "properties": {
          "xmin": {
            "type": "integer",
            "example": 150
          },
          "ymin": {
            "type": "integer",
            "example": 100
          },
          "xmax": {
            "type": "integer",
            "example": 350
          },
          "ymax": {
            "type": "integer",
            "example": 300
          }
        },
        "required": ["xmin", "ymin", "xmax", "ymax"]
      },
      "PersonMatch": {
        "type": "object",
        "properties": {
          "person_id": {
            "type": "string",
            "example": "0001_john_doe"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "distance": {
            "type": "number",
            "format": "float",
            "description": "L2 distance (lower is better match)",
            "example": 0.42
          }
        },
        "required": ["person_id", "name", "distance"]
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["error"]
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request - invalid input",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Both person_id and name are required"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Person 0001_john_doe not found"
            }
          }
        }
      },
      "Conflict": {
        "description": "Resource already exists",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "Person 0001_john_doe already exists"
            }
          }
        }
      },
      "PayloadTooLarge": {
        "description": "File size exceeds maximum limit",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "File too large. Max size is 16MB"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            },
            "example": {
              "error": "An unexpected error occurred"
            }
          }
        }
      }
    }
  }
}
